<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_home_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/finalback1"
    tools:context=".admin_home_fragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="362dp"
            android:layout_height="84dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="50dp">

            <TextView
                android:id="@+id/roomval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cityid2"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/room"
                android:inputType="number"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cityid2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="PATHANKOT"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cityid2"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="No. of Rooms Available:"
                android:textSize="18sp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/input_recycler"
        android:layout_width="391dp"
        android:layout_height="194dp"
        android:layout_below="@id/cardroom"
        android:layout_marginStart="8dp"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp" />

</RelativeLayout>